<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3E3F3"
    tools:context=".TestQuestionActivity">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3E3F3"
        android:id="@+id/constraint"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".05"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".30"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".90"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50"/>
        <ImageView
            android:src="@drawable/timer"
            android:id="@+id/timerImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guid1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4pt"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/timerTxt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/timerImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guid1"
            android:text="00:01:34"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="2pt"/>
        <TextView
            android:id="@+id/countingTxt"
            android:text="1/5"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginRight="4pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guid1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/questionLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="3pt"
            android:layout_marginHorizontal="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guid1"
            app:layout_constraintBottom_toTopOf="@+id/guid2"
            app:cardCornerRadius="4pt"
            app:cardElevation="3pt">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/question"
                    android:text="Question 1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="15dp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:background="@drawable/ques_change_bg"
            android:shadowColor="#0C1865"
            app:layout_constraintStart_toEndOf="@+id/guid4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guid3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:shadowRadius="0.4"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/prevBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Previous"
            android:layout_marginBottom="4dp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/ques_change_bg"
            android:shadowColor="#0C1865"
            app:layout_constraintEnd_toStartOf="@+id/guid4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guid3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:shadowRadius="0.4"
            />

        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guid2"
            app:layout_constraintBottom_toTopOf="@+id/guid3"
            android:orientation="vertical"
            android:layout_marginTop="4pt"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/op1Lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3pt"
                android:layout_marginHorizontal="7pt"
                android:background="@drawable/option_bg">
                <TextView
                    android:id="@+id/option1"
                    android:text="Option 1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/op2Lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3pt"
                android:layout_marginHorizontal="7pt"
                android:background="@drawable/option_bg">
                <TextView
                    android:id="@+id/option2"
                    android:text="Option 2"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/op3Lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3pt"
                android:layout_marginHorizontal="7pt"
                android:background="@drawable/option_bg">
                <TextView
                    android:id="@+id/option3"
                    android:text="Option 3"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/op4Lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3pt"
                android:layout_marginHorizontal="7pt"
                android:background="@drawable/option_bg">
                <TextView
                    android:id="@+id/option4"
                    android:text="Option 4"
                    android:textSize="16sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>