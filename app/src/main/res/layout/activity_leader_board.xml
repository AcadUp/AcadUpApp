                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3pt">
                    <TextView
                        android:id="@+id/chName3"
                        android:text="Nishu Kumari"
                        android:fontFamily="@font/stolzl_medium"
                        android:textColor="#4CAF50"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>

                    <TextView
                        android:id="@+id/classText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class-7"
                        android:textSize="20sp"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/linearLayout3"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="18dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout4"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/chImage4"
                    android:layout_gravity="center"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:src="@drawable/medal"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3pt">
                    <TextView
                        android:id="@+id/chName4"
                        android:text="Sourav Kumar Keshri"
                        android:fontFamily="@font/stolzl_medium"
                        android:textColor="#4CAF50"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>

                    <TextView
                        android:id="@+id/classText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class-11"
                        android:textSize="20sp"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/linearLayout4"
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="18dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout5"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/chImage5"
                    android:layout_gravity="center"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:src="@drawable/medal"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3pt">
                    <TextView
                        android:id="@+id/chName5"
                        android:text="Gourav Kumar"
                        android:fontFamily="@font/stolzl_medium"
                        android:textColor="#4CAF50"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>

                    <TextView
                        android:id="@+id/classText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class-4"
                        android:textSize="20sp"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>