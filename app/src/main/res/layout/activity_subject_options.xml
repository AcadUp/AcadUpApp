<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgone"
    tools:context=".SubjectOptions">
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:backgroundTint="#3461A5"
        android:layout_height="50dp"
        android:src="@drawable/back_btn_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/classesCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/classes"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="1-on-1 Classes" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tutorialsCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tutorial"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Tutorials" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/testCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/test"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Tests" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pdfsCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/concept"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Concept PDFs" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/solutionsCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/key"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="NCERT Solutions" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/papersCard"
            app:cardCornerRadius="15dp"
            android:layout_width="0dp"
            app:cardBackgroundColor="#5E7AA3"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/exam"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="Past Year Papers" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>